pipeline {
    agent any
    environment {
        NODE_IMAGE = 'node'
    }
    stages {
        stage('Yarn Install') {
            agent {
                docker {
                    image "${NODE_IMAGE}"
                }
            }
            steps {
                echo 'Yarn Install'
                echo '*********************'
                sh 'node --version'
                sh 'yarn --version'
            }
        }
    }
}